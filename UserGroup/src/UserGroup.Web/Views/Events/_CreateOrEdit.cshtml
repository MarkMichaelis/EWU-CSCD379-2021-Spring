@model Event

<div asp-validation-summary='All'></div>
<div class="mb-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
            <input class="w-full border-b-2 border-indigo-300 focus:border-indigo-600 focus:ring-transparent focus:outline-none" type="text" asp-for="Title" />
        </div>
        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
            <input class="w-full border-b-2 border-indigo-300 focus:border-indigo-600 focus:ring-transparent focus:outline-none" type="text" asp-for="Description" />
        </div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="Location"></label>
            <input class="w-full border-b-2 border-indigo-300 focus:border-indigo-600 focus:ring-transparent focus:outline-none" type="text" asp-for="Location" />
        </div>
        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="Date"></label>
            <input class="w-full border-b-2 border-indigo-300 focus:border-indigo-600 focus:ring-transparent focus:outline-none" type="text" asp-for="Date" />
        </div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="SpeakerId"></label>
            <select class="w-full border-b-2 border-indigo-300 focus:border-indigo-600 focus:ring-transparent focus:outline-none" asp-for="SpeakerId" asp-items="@(new SelectList(MockData.Speakers, "Id", "FullName"))">
                <option>Please select one</option>
            </select>
        </div>
    </div>
</div>